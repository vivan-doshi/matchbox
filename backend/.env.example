# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/matchbox

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Cloudinary Configuration (Required for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Email Configuration (Required for email verification)
# For Gmail: Use smtp.gmail.com with App Password (not regular password)
# For SendGrid: Use smtp.sendgrid.net with API key
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@usc.edu
EMAIL_PASSWORD=your-app-password-here
EMAIL_FROM=MatchBox <noreply@matchbox.com>

# Frontend URL (Required for verification links)
# Development: http://localhost:5173
# Production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:5173
